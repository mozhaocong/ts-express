{
	"compilerOptions": {
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"allowJs": true,
		"baseUrl": ".",
		"module": "esnext",
		"target": "esnext",
		"sourceMap": true,
		"types": [ "node", "webpack-env"],
		"moduleResolution": "node",
		"paths": {
			"@/*": ["src/*"]
		},
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/*", "src/**/*","build/*"],
	"exclude": ["node_modules"]
}
